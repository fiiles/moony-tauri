{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Moony",
  "version": "1.0.2",
  "identifier": "com.filipkral.moony-tauri",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Moony - Personal Wealth Manager",
        "width": 1400,
        "height": 850,
        "minWidth": 1400,
        "minHeight": 850
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: asset: https:; connect-src 'self' https://www.ecb.europa.eu https://query1.finance.yahoo.com https://api.coingecko.com https://pro-api.coingecko.com https://github.com",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$RESOURCE/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "nsis", "deb", "rpm", "appimage"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/categorization_model.bin"
    ],
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZFMUQ1Q0M4QUZFNjFCQkQKUldTOUcrYXZ5RndkL2xrN1E1ZVFpMW1ySjJ6NUdoVnI5ME9WT0hkNEJlZGhhaXJWOGQ3RDlmK3MK",
      "endpoints": [
        "https://github.com/fiiles/moony-tauri/releases/latest/download/latest.json"
      ]
    }
  }
}